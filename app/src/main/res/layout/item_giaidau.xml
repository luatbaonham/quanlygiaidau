<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="6dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <!-- Ảnh nền -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/giaidau" />

            <!-- Nội dung chồng lên -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="12dp"> <!-- nền mờ đen -->

                <!-- Logo đội -->
                <ImageView
                    android:id="@+id/imgLogoDoi"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ngoaihanganh"/>

                <!-- Phần chứa thông tin -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp">

                    <!-- Tên giải - trên cùng -->
                    <TextView
                        android:id="@+id/tvTenGiaiDau"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên giải đấu"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_gravity="top"
                        android:gravity="center"
                        android:padding="4dp" />

                    <!-- Quốc gia - ở giữa -->
                    <TextView
                        android:id="@+id/tvQuocGia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quốc gia"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="4dp" />

                    <!-- Câu lạc bộ - dưới cùng -->
                    <TextView
                        android:id="@+id/tvTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Câu lạc bộ"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:padding="4dp" />

                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
